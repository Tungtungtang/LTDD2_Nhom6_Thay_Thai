        android:fromXDelta="0%p"
        android:toXDelta="0%p"
        android:fromYDelta="0%p"
        android:toYDelta="60%p"
        android:duration="1800"
        android:startOffset="2500"
        android:fillAfter="true"/>
    //xe keo
    <translate
        android:fromXDelta="0%p"
        android:toXDelta="-60%p"
        android:fromYDelta="0%p"
        android:toYDelta="0%p"
